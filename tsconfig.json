{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strictNullChecks": true,
		"preserveConstEnums": true,
		"removeComments": true,
	},
	"exclude": [
		"node_modules",
		".vscode",
		".git",
		"**/*.spec.ts",
		"build"
	],
	"include": [
		"src/**/*",
		"test/"
	]
}